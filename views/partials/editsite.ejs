<div id="edit-site-toggle">
    <span>
        <img src="https://i.imgur.com/PpDUWIu.png">
    </span>
</div>
<nav id="edit-site-partial">
        <h5>Edit Site</h5>
    
    <% if(!!currentUser === true && currentUser._id.equals(Site._by)) { %>
    <form method="post" action="/sites/<%= Site._id%>?_method=PATCH">

        <div class="form-group">
          <input type="text" class="form-control"  id="name"  name="name"  value="<%=Site.name%>" placeholder="Site Name">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="body" name="body" value="<%=Site.body%>" placeholder="About Site">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="photo" name="photo" value="<%=Site.photo%>" placeholder="Image Url">
        <button type="submit" class="btn btn-mars edit-site-btn">Submit</button>
        </div>
      </form>

      <form method="post" action="/sites/<%= Site._id%>?_method=DELETE">
        <hr>
        <button type="submit" class="btn btn-site-delete edit-site-btn">Delete</button>
      </form>

      <% } else { %>
      <div id="creator">
        <h4> Only the creator of this page can edit or delete this site!</h4>
      </div>
      <% } %>

    </nav>
